# ============================================================================
# SECURITY WARNING: This is a template file. DO NOT commit secrets here.
# NEVER commit .env or .env.*.local to version control.
# ============================================================================

APP_NAME="Email Verification Service"
APP_ENV=local
APP_KEY=base64:CHANGE_ME_RUN_php_artisan_key_generate
APP_DEBUG=true
APP_URL=https://your-domain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=notice

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Local Development: SQLite (default)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Production: MySQL / PostgreSQL (uncomment and configure)
# DB_CONNECTION=mysql
# DB_HOST=your-db-host.com
# DB_PORT=3306
# DB_DATABASE=email_verification_prod
# DB_USERNAME=change_me
# DB_PASSWORD=change_me_strong_password
# DB_CHARSET=utf8mb4
# DB_COLLATION=utf8mb4_unicode_ci

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Sanctum / SPA
SANCTUM_STATEFUL_DOMAINS=localhost
SANCTUM_EXPIRATION=null
CORS_ALLOWED_ORIGINS=http://localhost:5173
CORS_SUPPORTS_CREDENTIALS=true

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Admin Configuration
ADMIN_EMAILS=admin@example.com
ADMIN_SLACK_WEBHOOK=

# Metrics (optional - null disables)
METRICS_DRIVER=null
STATSD_HOST=127.0.0.1
STATSD_PORT=8125
STATSD_PREFIX=

# Third-party API Keys
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_PROJECT_ID=
HUBSPOT_API_KEY=
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=

VITE_APP_NAME="${APP_NAME}"

